<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articleListContainerFragment">

    <fragment
        android:id="@+id/articleListContainerFragment"
        android:name="com.devyd.articlelist.ui.parent.ArticleListContainerFragment"
        android:label="articleListContainer">
        <action
            android:id="@+id/action_articleListContainerFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
        <action
            android:id="@+id/action_articleListContainerFragment_to_categorySettingsFragment"
            app:destination="@id/categorySettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.devyd.articledetail.ui.ArticleDetailFragment"
        android:label="articleDetail">
    </fragment>

    <fragment
        android:id="@+id/categorySettingsFragment"
        android:name="com.devyd.settings.ui.CategorySettingsFragment"
        android:label="categorySettings">
    </fragment>
</navigation>